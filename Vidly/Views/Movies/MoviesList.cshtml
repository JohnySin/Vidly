

@model List<Vidly.Models.Movie>
@{
    ViewBag.Title = "CustomersList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of Movies</h2>

@if (Model.Count == 0)
{
    <text>There are no movies.</text>
}
else
{
<ul>
    @foreach (var movie in Model)
    {
        <li style="width: 25%;">@Html.ActionLink(movie.Name, "Details", "Movies", new { id = movie.Id}, new { @class = "nav-link" })</li>
    }
</ul>

}
